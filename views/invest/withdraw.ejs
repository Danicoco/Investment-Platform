<%layout('layouts/withdrawTemplate')%>
<div class="row mt-3">
    <div class="col-md-12">
        <%- include('../flash/messages') %>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="row mt-4">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                      <th scope="col">Date</th>
                      <th scope="col">Withdrawal Type</th>
                      <th scope="col">Amount</th>
                      <th scope="col">Status</th>
                    </tr>
                  </thead>
                  <tbody>
                      <%if(withdrawal.length > 0){%>
                        <%for(i=0; i < withdrawal.length; i++){%>
                            <tr>
                                <td><%=moment(withdrawal[i].createdAt).format('MMMM Do YYYY, h:mm a');%></td>
                                <td>Withdrawal</td>
                                <td><%=withdrawal[i].amount%></td>
                                <td><%=withdrawal[i].status%></td>
                            </tr>
                        <%}%>
                        <%}%>
                        <%if(referral.length > 0){%>
                            <%for(i=0; i < referral.length; i++){%>
                                <tr>
                                    <td><%=moment(referral[i].createdAt).format('MMMM Do YYYY, h:mm a');%></td>
                                    <td>Referral Bonus</td>
                                    <td><%=referral[i].amount%></td>
                                    <td><%=referral[i].status%></td>
                                </tr>
                            <%}%>
                      <%}%>                  
                </tbody>
            </table>
        </div>
    </div>
</div>